{% extends '@ApplicationApp/layout.html.twig' %}


{% block body %}
    <div class="row" style="padding-bottom: 3%;">
        <div class="container-fluid" style="margin-top: 3%;">

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <span class="{{ type }}">
                        <h4 class="confirm col-md-6 col-md-push-3">
                            {{ message }}
                            Сейчас Вас перенаправят на предыдущую страницу.
                        </h4>
                        <script>

                            var oldURL = document.referrer;
                            setTimeout('location=oldURL;', 5000);

                        </script>
                    </span>
                {% endfor %}
            {% endfor %}


        </div>
    </div>

{% endblock %}